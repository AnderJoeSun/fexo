<section class="tag-box">
  <div class="tag-title"><%= __('tags') %></div>
  <div class="tag-list">
    <% sort_tags_by_pinyin(); %>
    <% site.tags.each(function(tag) { %>
      <a class="tag-item" href="#<%= tag.name %>">
        <span class="tag-name"><%= tag.name%></span>
        <span class="tag-size">( <%= tag.length %> )</span>
      </a>
    <% }); %>
  </div>
</section>
